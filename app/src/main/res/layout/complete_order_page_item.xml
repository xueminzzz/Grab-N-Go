<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="@color/logo_background"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/FoodName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_name_1"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/FoodPrice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_price_1"
            android:textSize="18dp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/FoodName1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/AddOnText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add-Ons"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/FoodPrice1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/AddOn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1. Cheese Tofu"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/AddOnText1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/AddOnPrice1"/>

        <TextView
            android:id="@+id/AddOnPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_on_1_price"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/AddOn1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/AddOn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Cheese Tofu"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/AddOn1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/AddOnPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_on_1_price"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/AddOn2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/AddOn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="3. Cheese Tofu"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/AddOn2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/AddOnPrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_on_1_price"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/AddOn3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/AddOn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="4. Cheese Tofu"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/AddOn3"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/AddOnPrice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_on_1_price"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/AddOn4"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/AddOn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="5. Cheese Tofu"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/AddOn4"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/AddOnPrice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_on_1_price"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/AddOn5"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>